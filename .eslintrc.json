{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "worker": true
    },
    "extends": "eslint:recommended",
    "plugins": ["compat"],
    "rules": {
        "semi": 2,
        "prefer-const": 2,
        "no-const-assign": 2,
        "no-var": 2,
        "comma-dangle": [2, "never"],
        "no-console": 0,
        "no-cond-assign": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": 2,
        "no-extra-semi": 2,
        "no-obj-calls": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-typeof": 2,
        "valid-jsdoc": 2,
        "dot-location": [2, "property"],
        "eqeqeq": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-else-return": 2,
        "no-eval": 2,
        "no-extra-bind": 2,
        "no-implied-eval": 2,
        "no-lone-blocks": 2,
        "no-multi-spaces": 2,
        "no-return-assign": 2,
        "no-self-assign": 2,
        "no-self-compare": 2,
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "radix": [2, "always"],
        "wrap-iife": [2, "inside"],
        "strict": [2, "safe"],
        "no-undef": 2,
        "no-unused-vars": 2,
        "block-spacing": [2, "always"],
        "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
        "comma-style": [2, "last"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-lonely-if": 2,
        "arrow-spacing": [2, { "before": true, "after": true }],
        "prefer-spread": 2,
        "prefer-rest-params": 2,
        "object-shorthand": 2,
        "array-callback-return": 2,
        "prefer-template": 2,
        "prefer-arrow-callback": 2,
        "no-useless-constructor": 2,
        "no-dupe-class-members": 2,
        "no-unneeded-ternary": 2,
        "space-before-blocks": 2,
        "object-curly-spacing": [2, "always"]
    }
}
